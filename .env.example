# =============================================================================
# Norfolk Cleaners - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in the values.
# All integrations are DISABLED by default. Set ENABLE_* to "true" to activate.
# =============================================================================

# --- Site Configuration ---
NEXT_PUBLIC_SITE_NAME="Norfolk Cleaners"
NEXT_PUBLIC_SITE_URL="https://demo.norfolkcleaners.arcscri.be"

# --- Feature Toggles (all disabled by default) ---
ENABLE_DATABASE=true
ENABLE_STORAGE=true
ENABLE_SMTP=false

# --- PostgreSQL via Coolify (requires ENABLE_DATABASE=true) ---
# Connection string from your Coolify PostgreSQL service
DATABASE_URL=postgres://postgres:pEd4UD8tLrpC@10.0.0.10:47291/postgres

# --- MinIO Object Storage (requires ENABLE_STORAGE=true) ---
MINIO_ENDPOINT=https://s3.arcscribe.co.uk
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads

# --- SMTP Email (requires ENABLE_SMTP=true) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME="Norfolk Cleaners"
SMTP_FROM_EMAIL=noreply@norfolkcleaners.arcscri.be

# --- Authentication ---
# Secret used to sign JWT session tokens (min 32 chars recommended).
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-me-to-a-random-secret

# --- App Mode ---
# Set to "development" to enable the "Show Demo Data" toggle on the dashboard.
# Omit or set to "production" to hide it.
NEXT_STATUS=development
