# =============================================================================
# Arcscribe Client Site Boilerplate - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in the values as needed.
# All integrations are DISABLED by default. Set ENABLE_* to "true" to activate.
# =============================================================================

# --- Site Configuration ---
NEXT_PUBLIC_SITE_NAME="Client Name"
NEXT_PUBLIC_SITE_URL="https://example.com"

# --- Feature Toggles (all disabled by default) ---
ENABLE_DATABASE=false
ENABLE_STORAGE=false
ENABLE_SMTP=false

# --- PostgreSQL (requires ENABLE_DATABASE=true) ---
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=clientdb
DATABASE_USER=postgres
DATABASE_PASSWORD=
DATABASE_SSL=false

# --- MinIO Object Storage (requires ENABLE_STORAGE=true) ---
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads

# --- SMTP Email (requires ENABLE_SMTP=true) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME="Client Name"
SMTP_FROM_EMAIL=noreply@example.com
